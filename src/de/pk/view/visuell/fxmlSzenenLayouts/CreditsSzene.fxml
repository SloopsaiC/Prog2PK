<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane id="SzenenPane" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="600.0" prefWidth="900.0" styleClass="mainFxmlClass"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.pk.view.visuell.fxmlSzenenController.CreditsSzeneController">
	<stylesheets>
		<URL value ="@menueSzenenStyle.css" />
	</stylesheets>
	<children>
		<ImageView id="HintergrundBild" fitHeight="600.0" fitWidth="900.0" opacity="0.8"
			pickOnBounds="true" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<image>
				<Image url="de/pk/ressourcen/bildDateien/testImg.jpg" />
			</image>
		</ImageView>
		<BorderPane prefHeight="200.0" prefWidth="200.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<bottom>
				<Button fx:id="zurueckZumHauptmenue" focusTraversable="false"
					mnemonicParsing="false" onAction="#zumHauptmenueButtonAction"
					text="Zurueck zum Hauptmenue" BorderPane.alignment="BOTTOM_RIGHT" />
			</bottom>
			<top>
				<Label id="ueberschriftenLabel" focusTraversable="false"
					text="CREDITS" BorderPane.alignment="CENTER" />
			</top>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
			<center>
				<ImageView fitHeight="260.0" fitWidth="262.0"
					opacity="0.35" pickOnBounds="true" preserveRatio="true"
					BorderPane.alignment="CENTER">
					<image>
						<Image
							url="de/pk/ressourcen/bildDateien/spadesKingDices.jpg" />
					</image>
				</ImageView>
			</center>
		</BorderPane>
	</children>
</AnchorPane>
